# Configurações do Insurance News Agent para Railway

# Configurações gerais
PORT=8000
FLASK_DEBUG=false
TIMEZONE=America/Sao_Paulo
DAILY_COLLECTION_TIME=08:00

# E-mail
ENABLE_EMAIL=true
EMAIL_RECIPIENTS_DAILY=email1@empresa.com,email2@empresa.com
EMAIL_RECIPIENTS_ALERTS=email1@empresa.com,email2@empresa.com
EMAIL_RECIPIENTS_ERRORS=admin@empresa.com

# Gmail API (conteúdo dos arquivos JSON)
GMAIL_CREDENTIALS={"installed":{"client_id":"...","client_secret":"...","auth_uri":"...","token_uri":"..."}}
GMAIL_TOKEN={"token":"...","refresh_token":"...","token_uri":"...","client_id":"...","client_secret":"...","scopes":["..."]}

# Webhook (opcional)
WEBHOOK_TOKEN=seu_token_secreto_aqui

# Configurações de coleta
MAX_ARTICLES_PER_SOURCE=50
RELEVANCE_THRESHOLD=0.5
ENABLE_OPEN_INSURANCE_ALERTS=true

# Logs
LOG_LEVEL=INFO
LOG_RETENTION_DAYS=30

# Railway específico
RAILWAY_ENVIRONMENT=production

